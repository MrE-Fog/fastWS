  "bugs": {
    "url": "https://github.com/hans00/fastWS/issues"
  },
  "homepage": "https://github.com/hans00/fastWS#readme",
  "scripts": {
    "build": "lerna run build --no-sort",
    "bump-version": "lerna version --no-push",
    "publish-all": "lerna publish from-git --no-sort",
    "prebuild": "lerna run prebuild --",
    "prebuild-upload": "lerna run prebuild-upload --",
    "push-with-tag": "git push --tags",
    "tag-version": "git tag -a v${npm_package_version} -m \"release v${npm_package_version}\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "node test"
  },
  "devDependencies": {
    "axios": "^0.22.0",
    "chalk": "^4.1.2",
