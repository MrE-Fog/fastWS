    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "express-ws": "^5.0.2",
    "fast-ws-client": "file:packages/client",
    "fast-ws-server": "file:packages/server",
    "lerna": "^4.0.0",
    "lru-cache": "^6.0.0",
    "mkcert": "^1.4.0",
    "pre-commit": "^1.2.2",
    "socket.io": "^4.2.0",
    "socket.io-client": "^4.2.0",
    "tmp": "^0.2.1",
    "ws": "^8.2.3"
  }
}
