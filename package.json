{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "pre-commit": [
    "lint:fix"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hans00/fastWS.git"
  },
  "author": "Hans <admin@itsrv.tw>",
